{
  "name": "sensei-lms",
  "version": "3.0.0",
  "homepage": "https://woocommerce.com/products/sensei/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Automattic/sensei.git"
  },
  "license": "GPL-2.0+",
  "main": "gulpfile.js",
  "devDependencies": {
    "@automattic/calypso-build": "5.1.0",
    "@wordpress/babel-preset-default": "4.7.0",
    "@wordpress/jest-preset-default": "1.0.6",
    "@wordpress/scripts": "5.1.0",
    "cross-env": "5.2.1",
    "del": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.6.0",
    "gulp": "4.0.2",
    "gulp-checktextdomain": "2.2.1",
    "gulp-sort": "2.0.0",
    "gulp-wp-pot": "2.4.0",
    "gulp-zip": "4.2.0"
  },
  "dependencies": {
    "select2": "4.0.5"
  },
  "scripts": {
    "test": "npm run test-php && npm run test-js",
    "test-php": "./vendor/bin/phpunit",
    "build": "cross-env NODE_ENV=production npx calypso-build",
    "start": "calypso-build --watch",
    "package": "gulp package",
    "test-js": "wp-scripts test-unit-js --passWithNoTests",
    "lint-js-wpcom": "wp-scripts lint-js --no-eslintrc --config .eslintrc.wpcom.json --ignore-path .eslintignore-wpcom .",
    "lint-css": "wp-scripts lint-style **/*.scss",
    "lint-css:fix": "npm run lint-css -- --fix",
    "lint-js": "wp-scripts lint-js assets/**/**.jsx",
    "lint-js:fix": "npm run lint-js -- --fix",
    "run-phpcs": "./vendor/bin/phpcs --encoding=utf-8"
  }
}